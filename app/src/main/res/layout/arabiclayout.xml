<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:text="تسجيل"
        android:layout_margin="5dp"

        android:gravity="center"
        android:textColor="@color/red"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:padding="3dp"
        android:elevation="5dp"
        android:background="@drawable/input"
        android:layout_margin="10dp"
        android:hint="الاسم بالكامل"
        android:layout_height="40dp" />
    <EditText
        android:layout_width="match_parent"
        android:padding="3dp"
        android:elevation="5dp"
        android:background="@drawable/input"
        android:layout_margin="10dp"
        android:hint="رقم السر"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:elevation="5dp"
            android:padding="3dp"
            android:id="@+id/codear"
            android:background="@drawable/list_small_ar"
            android:hint="الكود"
            android:layout_height="40dp" />
        <EditText
            android:layout_width="0dp"
            android:padding="3dp"
            android:layout_weight="2"
            android:elevation="5dp"
            android:background="@drawable/input"
            android:hint="12345"
            android:layout_height="40dp" />

    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:padding="3dp"
        android:elevation="5dp"
        android:background="@drawable/input"
        android:layout_margin="10dp"
        android:hint="الايميل"
        android:layout_height="40dp" />
    <Spinner
        android:layout_width="match_parent"
        android:padding="3dp"
        android:elevation="5dp"
        android:id="@+id/countryar"

        android:autofillHints="البلد"
        android:background="@drawable/list_ar"
        android:layout_margin="10dp"
        android:layout_height="40dp" />
    <Spinner
        android:layout_width="match_parent"
        android:padding="3dp"
        android:elevation="5dp"
        android:background="@drawable/list_ar"
        android:id="@+id/cityar"
        android:layout_margin="10dp"
        android:hint="المدينة"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:gravity="center"
            android:text="من خلال النقر فوق تسجيل فإنك توافق على "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@color/red"
            android:gravity="center"
            android:text="الشروط والأحكام"/>

    </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="تغيير اللغة"
        android:id="@+id/changelanar"
        android:layout_weight=".3"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textStyle="bold"

        android:textSize="20sp"
        android:background="@color/red"
        android:textColor="@color/white"
        android:layout_height="0dp" />

</LinearLayout>