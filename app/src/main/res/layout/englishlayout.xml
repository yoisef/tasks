<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/englishlayout"
    android:layoutDirection="ltr"

    android:orientation="vertical"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2">
    <TextView
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:id="@+id/texttgrba"
        android:text="REGISTER"
        android:layout_margin="5dp"

        android:gravity="center"
        android:textColor="@color/red"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:padding="3dp"
        android:elevation="5dp"
        android:background="@drawable/input"
        android:layout_margin="10dp"
        android:hint="full name"
        android:layout_height="40dp" />
    <EditText
        android:layout_width="match_parent"
        android:padding="3dp"
        android:elevation="5dp"
        android:background="@drawable/input"
        android:layout_margin="10dp"
        android:hint="password"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:id="@+id/codee"
            android:elevation="5dp"
            android:background="@drawable/list_small_en"
            android:hint="Code"
            android:layout_height="40dp" />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="2"
            android:padding="10dp"
            android:elevation="5dp"
            android:background="@drawable/input"
            android:hint="12345"
            android:layout_height="40dp" />

    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:padding="3dp"
        android:elevation="5dp"
        android:background="@drawable/input"
        android:layout_margin="10dp"
        android:hint="Email"
        android:layout_height="40dp" />
    <Spinner
        android:layout_width="match_parent"
        android:padding="3dp"
        android:elevation="5dp"
        android:id="@+id/countspineren"
        android:background="@drawable/list_en"
        android:layout_margin="10dp"
        android:hint="Country"
        android:layout_height="40dp" />
    <Spinner
        android:layout_width="match_parent"
        android:padding="3dp"
        android:elevation="5dp"
        android:id="@+id/cityid"
        android:background="@drawable/list_en"
        android:layout_margin="10dp"
        android:hint="City"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:gravity="center"
            android:text="By clicking register you agree to "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@color/red"
            android:gravity="center"
            android:text="Terms and Conditions"/>

    </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="Change Language"
        android:id="@+id/changeeng"
        android:layout_weight=".3"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@color/red"
        android:textColor="@color/white"
        android:layout_height="0dp" />

</LinearLayout>